		{
			"name": "Crear tienda válida",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"El código de estado es 201\", function () {",
							"    pm.response.to.have.status(201);",
							"});",
							"",
							"pm.test(\"La tienda es creada\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.name).to.eql(\"Tienda de prueba\");",
							"    pm.expect(jsonData.city).to.eql(\"BOG\");",
							"    pm.expect(jsonData.address).to.eql(\"Calle 123\");",
							"    pm.environment.set(\"store_id\", jsonData.id);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"name\": \"Tienda de prueba\",\n    \"city\": \"BOG\",\n    \"address\": \"Calle 123\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
